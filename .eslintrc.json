{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:@shopify/typescript",
        "plugin:@shopify/prettier",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-catch-shadow": "off",
        "no-console": "off",
        "prefer-const": "error",
        "no-warning-comments": "warn",
        "@typescript-eslint/consistent-indexed-object-style": [
            "error",
            "record"
        ]
    }
}